<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center"> <!-- Вирівнювання по центру -->

        <Button
            android:id="@+id/button_to_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#BB86FC"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:text="Перейти на першу сторінку" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Розрахунок елементарного складу та нижчої теплоти згоряння мазуту на робочу масу для складу горючої маси мазуту"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center" />

        <EditText
            android:id="@+id/hydrogen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Вміст гідрогену (H)"
            android:inputType="numberDecimal"
            android:backgroundTint="#BB86FC"
            android:textColorHint="#AAAAAA"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/carbon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Вміст вуглецю (C)"
            android:inputType="numberDecimal"
            android:backgroundTint="#BB86FC"
            android:textColorHint="#AAAAAA"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/sulfur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Вміст сірки (S)"
            android:inputType="numberDecimal"
            android:backgroundTint="#BB86FC"
            android:textColorHint="#AAAAAA"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/oxygen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Вміст кисню (O)"
            android:inputType="numberDecimal"
            android:backgroundTint="#BB86FC"
            android:textColorHint="#AAAAAA"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/wet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Вміст вологи (W)"
            android:inputType="numberDecimal"
            android:backgroundTint="#BB86FC"
            android:textColorHint="#AAAAAA"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/ash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Вміст золи (A)"
            android:inputType="numberDecimal"
            android:backgroundTint="#BB86FC"
            android:textColorHint="#AAAAAA"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/vanadium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Вміст ванадіуму (V)"
            android:inputType="numberDecimal"
            android:backgroundTint="#BB86FC"
            android:textColorHint="#AAAAAA"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/q"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Нижча теплота згорання (Q)"
            android:inputType="numberDecimal"
            android:backgroundTint="#BB86FC"
            android:textColorHint="#AAAAAA"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/calculateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#03DAC6"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:text="Обчислити" />

        <TextView
            android:id="@+id/results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="#FFFFFF"
            android:gravity="center" />
    </LinearLayout>
</ScrollView>
