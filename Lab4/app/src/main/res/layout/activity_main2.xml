<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/button_to_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Перейти на першу сторінку"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1F1F1F"
            android:padding="12dp"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/button_to_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Перейти на третю сторінку"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1F1F1F"
            android:padding="8dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Визначення струмів КЗ на шинах 10 кВ ГПП"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/voltageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Середня номінальна напруга"
            android:textSize="14sp"
            android:textColor="#CCCCCC"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/voltage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textSize="14sp"
            android:background="#1E1E1E"
            android:textColor="#FFFFFF"
            android:textColorHint="#666666"
            android:padding="12dp" />

        <TextView
            android:id="@+id/powerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Потужність КЗ"
            android:textSize="14sp"
            android:textColor="#CCCCCC"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/power"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textSize="14sp"
            android:background="#1E1E1E"
            android:textColor="#FFFFFF"
            android:textColorHint="#666666"
            android:padding="12dp" />

        <TextView
            android:id="@+id/nom_powerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Номінальне значення потужності"
            android:textSize="14sp"
            android:textColor="#CCCCCC"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/nom_power"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textSize="14sp"
            android:background="#1E1E1E"
            android:textColor="#FFFFFF"
            android:textColorHint="#666666"
            android:padding="12dp" />

        <TextView
            android:id="@+id/basic_powerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Базисна потужність"
            android:textSize="14sp"
            android:textColor="#CCCCCC"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/basic_power"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textSize="14sp"
            android:background="#1E1E1E"
            android:textColor="#FFFFFF"
            android:textColorHint="#666666"
            android:padding="12dp" />

        <Button
            android:id="@+id/calculateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:textSize="20sp"
            android:text="Обчислити" />

        <TextView
            android:id="@+id/results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="#CCCCCC"
            android:textSize="14sp" />

    </LinearLayout>
</ScrollView>
