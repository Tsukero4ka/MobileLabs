<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Заголовок сторінки -->
        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Розрахунок вмісту палива"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Введення даних для вугілля -->
        <TextView
            android:id="@+id/coalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вміст вугілля:"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/coal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введіть значення для вугілля"
            android:textSize="16sp"
            android:inputType="numberDecimal" />

        <!-- Введення даних для мазуту -->
        <TextView
            android:id="@+id/oilText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вміст мазуту:"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/oil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введіть значення для мазуту"
            android:textSize="16sp"
            android:inputType="numberDecimal" />

        <!-- Введення даних для газу -->
        <TextView
            android:id="@+id/gasText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вміст газу:"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/gas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введіть значення для газу"
            android:textSize="16sp"
            android:inputType="numberDecimal" />

        <!-- Кнопка обчислення -->
        <Button
            android:id="@+id/calculateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Обчислити"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:layout_gravity="center" />

        <!-- Відображення результатів -->
        <TextView
            android:id="@+id/results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:gravity="center" />
    </LinearLayout>
</ScrollView>
